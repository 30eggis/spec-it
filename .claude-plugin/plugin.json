{
  "name": "spec-it",
  "version": "1.0.0",
  "description": "Frontend development skills including PRD/SPEC/PHASE/TASKS document generation",
  "author": {
    "name": "Ted Kyung contributors"
  },
  "repository": "https://github.com/30eggis/spec-it",
  "homepage": "https://github.com/30eggis/spec-it",
  "license": "MIT",
  "keywords": ["multi-agent", "orchestration","SDD", "PRD", "spec","frontend", "documentation", "productivity"],
  "skills": "./skills/",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Skill(spec-it-execute)",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/setup-permissions.sh"
          }
        ]
      },
      {
        "matcher": "Skill(spec-mirror)",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/setup-permissions.sh"
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/hooks/tool-waiting-hook.sh",
            "timeout": 3
          }
        ]
      },
      {
        "matcher": "AskUserQuestion|ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/hooks/telegram-input-notify.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/hooks/tool-resume-hook.sh",
            "timeout": 3
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/hooks/telegram-stop-notify.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/hooks/telegram-permission-notify.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
