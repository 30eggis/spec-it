{
  "name": "frontend-skills",
  "version": "1.0.0",
  "description": "A collection of useful skills for frontend development and documentation",
  "skills": "./skills/",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Skill(spec-it-execute)",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/setup-permissions.sh"
          }
        ]
      },
      {
        "matcher": "Skill(spec-mirror)",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/setup-permissions.sh"
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/hooks/tool-waiting-hook.sh",
            "timeout": 3
          }
        ]
      },
      {
        "matcher": "AskUserQuestion|ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/hooks/telegram-input-notify.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/hooks/tool-resume-hook.sh",
            "timeout": 3
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/hooks/telegram-stop-notify.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/hooks/telegram-permission-notify.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
